<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/card_note_detail_content">
        <TextView
            android:id="@+id/card_note_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="title"
            android:layout_marginBottom="@dimen/card_note_detail_title_margin_bottom"/>

        <TextView
            android:id="@+id/card_note_detail_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|bottom">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/card_note_created_date_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created Date field"
            android:layout_margin="@dimen/card_note_detail_time"/>
    </LinearLayout>
</LinearLayout >